#!/bin/bash

source ~/.config/lemonbar/setup

while true; do
    echo "%{l}%{0 2}$(workspace)\
          %{l}%{O 2}$(volume)\
          %{c}$(title)\
          %{r}$(battery) $(network)$(ssid) %{O 2} $(_date) %{O 2} $(_time)"
    sleep 1s
done |

lemonbar\
    -b\
    -g "x32"\
    -F "#ffffff"\
    -B "#19000000"\
    -f "$PANEL_FONT_FAMILY"\
    -f "$ICON_FONT" | bash
