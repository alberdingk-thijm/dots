	layout
	{
		region { name=top align=top width=max height=48 margin-top=0 }
		region { name=bottom height=6 align=bottom }

		//Caption Buttons
		place { control="frame_minimize,frame_maximize,frame_close" y=1 align=right width=40 height=38 }

		//Frame Grips
		place { control=tlGrip height=11 width=11 }
		place { control=trGrip height=18 width=18 align=right }
		place { control=blGrip height=11 width=11 align=bottom }

		//Content
		place { control="UINavigatorPanel" width=max height=max x=1 margin-right=1 }

		//Avatar
		region { name="friends" y=37 height=3 }
		place { control="FriendPanel" region=friends height=40 width=29 align=right margin-right=150 }
		place { control="view_friends" x=0 margin-right=-60 y=0 region=top align=right end-right=FriendPanel dir=right margin-right=6 height=39 width=29 }
		place { control="friends_list" height=39 align=right end-right=UIStatusPanel }

		//Controls
		place { control="SupportAlert,startvr,exitvr,account_balance,InboxButton,ParentalLockButton" region=top align=right end-right=FriendPanel spacing=1 margin-right=1 height=39 }
		place { control="UIStatusPanel" region=top align=right end-right=frame_minimize margin-right=1 width=27 height=40 }
		place { control="MenuBar" region=top height=38 width=38 x=1 y=1 }

		//Controls - OS X
		place [$OSX] { control="account_balance" region=top align=right end-right=InboxButton margin-right=1 height=39 }
		place [$OSX] { control="InboxButton" region=top align=right end-right=FriendPanel margin-right=1 height=39 }
		place [$OSX] { control="MenuBar" region=top height=0 width=26 align=right end-right=frame_minimize margin-right=1 }

		// Hidden
		place { control="fullscreen,account_URL,add_game,account_balance_seperator,online_friends" width=1 align=right }
		place { control="universe_label,New" width=10 height=10 align=right }
	}
}